@model LogOnViewModel
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>SGS Portal - Login</title>
	<link href="@Url.Content("~/App_Themes/css/bootstrap.min.css")" rel="stylesheet">
	<link href="@Url.Content("~/App_Themes/css/datepicker3.css")" rel="stylesheet">
	<link href="@Url.Content("~/App_Themes/css/styles.css")" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="@Url.Content("~/App_Themes/js/html5shiv.js")"></script>
	<script src="@Url.Content("~/App_Themes/js/respond.min.js")"></script>
	<![endif]-->
</head>
<body>
    <div class="row" style="padding-bottom:20px;">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <img src="/App_Themes/Images/sustain.png" width="100%" height="100%" />
        </div>
    </div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">Log in</div>
				<div class="panel-body">
					@using (Html.BeginForm())
                     {
                        <fieldset>
							<div class="form-group">
                                @Html.TextBoxFor(x=>x.EmployeeId,new { @class="form-control", @placeholder="Employee ID", @autofocus=""}) 
							</div>
							<div class="form-group">
                                @Html.TextBoxFor(x=>x.Password, new { @class="form-control", @placeholder="Password", @type="password", @autofocus=""}) 
							</div>
							<div class="checkbox">
								<label>
                                    @Html.CheckBoxFor(m => m.IsRemember, new { @checked = "checked" }) Remember Me
								</label>
							</div>
                            <button type="submit" class="btn btn-primary">Sign in</button>               
                        </fieldset>
                     }
				</div>
			</div>
		</div><!-- /.col-->
	</div><!-- /.row -->	
	

<script src="@Url.Content("~/App_Themes/js/jquery-1.11.1.min.js")"></script>
	<script src="@Url.Content("~/App_Themes/js/bootstrap.min.js")"></script>
</body>
</html>
