<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>SGS Portal | @ViewBag.Title</title>
	@Styles.Render("~/bundles/payroll_css")
	
	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#"><span>Sustain</span> General Services</a>
			</div>
		</div><!-- /.container-fluid -->
	</nav>
	<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
		<div class="profile-sidebar">
			<div class="profile-userpic">
				<img src="@Url.Content("~/App_Themes/images/logo.jpg")" class="img-responsive" alt="">
			</div>
			<div class="profile-usertitle">
				<div class="profile-usertitle-name">Admin</div>
				<div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="divider"></div>	
        <ul class="nav menu">
            <li class="active"><a href="@Url.Content("~/Payroll")"><em class="fas fa-money-check-alt">&nbsp;</em> Dashboard</a></li>
            <li class=""><a href="@Url.Content("~/Payroll/TimeSheet")"><em class="fas fa-calendar-check">&nbsp;</em> Time Sheet</a></li>
            <li class=""><a href="@Url.Content("~/Payroll/Payslips")"><em class="fas fa-money-bill">&nbsp;</em> Payslips</a></li>
            <li class=""><a href="@Url.Content("~/Payroll/Billing")"><em class="fas fa-money-check">&nbsp;</em> Billing</a></li>
        </ul>
	</div><!--/.sidebar-->
		
	
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">@ViewBag.Title</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">@ViewBag.Title</h1>
			</div>
		</div><!--/.row-->

        @RenderBody()

	</div>	<!--/.main-->
	  
	@Scripts.Render("~/bundles/js")

    <script type="text/javascript">

        jQuery(document).ready(function () {
            var pathname = window.location.pathname;
            $('ul.nav li').attr('class', '');
            $('a[href="' + pathname + '"]').closest("li").attr('class', 'active');
        });

    </script>

    @RenderSection("AdditionalScript", required: false) 
		
</body>
</html>