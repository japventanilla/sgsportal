@model TimeSheetViewModel
@{
    ViewBag.Title = "Time Sheet / Upload";
    //Layout = "~/Areas/Payroll/Views/Shared/_LayoutPayroll.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        @if (ViewBag.Success != null)
                        {
                        <div class="alert bg-success" role="alert">
                            <em class="fas fa-lg fa-check-circle">
                                &nbsp;
                            </em> The file was successfully uploaded.
                        </div>
                        }
                        else
                        {
                            if (ViewBag.ErrorMsg != null)
                            {
                                <div class="alert bg-danger" role="alert">
                                    <em class="fa fa-lg fa-warning">
                                        &nbsp;
                                    </em> @ViewBag.ErrorMsg
                                </div>
                            }
                        }
                    </div>
                </div>

                @if (!Model.IsUploaded)
                {
                    using (Html.BeginForm("Upload", "TimeSheet", new { area = "Payroll" }, FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group col-md-8">
                            <label>Timesheet Template</label>
                            <input type="file" id="file" accept=".xls" name="file" class="form-control col-md-6">
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary">Upload</button>
                            <a href="@Url.Content("~/Payroll/TimeSheet")" class="btn btn-default">Return to Time Sheet</a>
                        </div>
                    }

                }
                else
                {
                    <div class="form-group col-md-12">
                        <a href="@Url.Content("~/Payroll/TimeSheet")" class="btn btn-primary">View Time Sheet</a>
                        <a href="@Url.Content("~/Payroll/TimeSheet/Upload")" class="btn btn-default">New Upload</a>
                    </div>
                }

            </div>
        </div>
    </div>

</div>